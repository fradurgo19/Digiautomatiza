[32m+[m[32m// Vercel Serverless Function - Gesti√≥n de Oportunidades (DELETE y PUT por ID)[m
[32m+[m[32mimport prisma from '../lib/prisma.js';[m
[32m+[m
[32m+[m[32mexport default async function handler(req, res) {[m
[32m+[m[32m  // Configurar CORS - DEBE IR PRIMERO[m
[32m+[m[32m  res.setHeader('Access-Control-Allow-Credentials', 'true');[m
[32m+[m[32m  res.setHeader('Access-Control-Allow-Origin', '*');[m
[32m+[m[32m  res.setHeader('Access-Control-Allow-Methods', 'GET,OPTIONS,PATCH,DELETE,POST,PUT');[m
[32m+[m[32m  res.setHeader([m
[32m+[m[32m    'Access-Control-Allow-Headers',[m
[32m+[m[32m    'X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, x-usuario-id, x-usuario-rol'[m
[32m+[m[32m  );[m
[32m+[m
[32m+[m[32m  // Manejar preflight OPTIONS[m
[32m+[m[32m  if (req.method === 'OPTIONS') {[m
[32m+[m[32m    res.status(200).end();[m
[32m+[m[32m    return;[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  try {[m
[32m+[m[32m    const { id } = req.query;[m
[32m+[m
[32m+[m[32m    if (req.method === 'DELETE') {[m
[32m+[m[32m      // Eliminar oportunidad[m
[32m+[m[32m      await prisma.oportunidad.delete({ where: { id } });[m
[32m+[m[32m      res.status(200).json({ success: true });[m
[32m+[m[32m    } else if (req.method === 'PUT' || req.method === 'PATCH') {[m
[32m+[m[32m      // Actualizar oportunidad[m
[32m+[m[32m      const datos = { ...req.body };[m
[32m+[m[32m      if (datos.fechaCierreEstimada) {[m
[32m+[m[32m        datos.fechaCierreEstimada = new Date(datos.fechaCierreEstimada);[m
[32m+[m[32m      }[m
[32m+[m[32m      const oportunidad = await prisma.oportunidad.update({[m
[32m+[m[32m        where: { id },[m
[32m+[m[32m        data: datos,[m
[32m+[m[32m        include: {[m
[32m+[m[32m          cliente: true,[m
[32m+[m[32m        },[m
[32m+[m[32m      });[m
[32m+[m[32m      res.status(200).json({ oportunidad });[m
[32m+[m[32m    } else {[m
[32m+[m[32m      res.status(405).json({ error: 'Method not allowed' });[m
[32m+[m[32m    }[m
[32m+[m[32m  } catch (error) {[m
[32m+[m[32m    console.error(`Error en /api/oportunidades/${req.query.id}:`, error);[m
[32m+[m[32m    res.setHeader('Content-Type', 'application/json');[m
[32m+[m[32m    res.status(500).json({ error: error.message });[m
[32m+[m[32m  }[m
[32m+[m[32m}[m
